  rspamd:
    container_name: rspamd
    image: carlgo11/mailroom-rspamd:${VERSION:-dev}
    volumes:
      - rspamd_confdir:/etc/rspamd
      - rspamd_dbdir:/var/lib/rspamd
    env_file: .env
    environment:
      - RSPAMD_REDIS_SERVERS=rspamd-compose-redis
    depends_on:
      - redis
    networks:
      postnet:
        ipv4_address: ${POSTNET_NETWORK:-172.22.0}.7
